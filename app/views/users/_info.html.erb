<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
</table>

<div class='row'>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>

  <% if user.current_user.following?(user) %>
        <td><%= link_to "フォロー外す", user_relationships_path(user.id),class: "btn btn-secondary", method: :delete %></td>
        <% else %>
        <td><%= link_to "フォローする", user_relationships_path(user.id),class: "btn btn-success", method: :post %></td>
        <% end %>
</div>